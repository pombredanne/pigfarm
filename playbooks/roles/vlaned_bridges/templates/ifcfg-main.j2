ONBOOT="yes"
TYPE="Ethernet"
HWADDR="{{ vlaned_bridges_mainif_mac }}"
NAME="{{ vlaned_bridges_mainif }}"
UUID="{{ vlaned_bridges_mainif_uuid }}"
ETHTOOL_OPTS="wol g"

#Whether the device is disabled if IPv4/6 configuration fails.
IPV4_FAILURE_FATAL="no"
IPV6_FAILURE_FATAL="no"

#IPV6
IPV6INIT="no"
IPV6_AUTOCONF="no"

#Whether this interface is the default route
DEFROUTE="no"
IPV6_DEFROUTE="no"

#Obtain routing from the DHCP server.
PEERROUTES="no"
IPV6_PEERROUTES="no"

#Modify the /etc/resolv.conf:
PEERDNS="no"
IPV6_PEERDNS="no"

#Do not let Network manager to modify this interface:
NM_CONTROLLED="no"
