cobbler system add  --name ${1} \
                    --owners admin \
                    --profile CentOS6 \
                    --status production \
                    --netboot-enabled 1 \
                    --kopts proxy=http://{{ '.'.join(nework_configuration[hypervisor]['trusted']['net'].split('.')[:3]) }}.2:3128 \
                    --hostname ${1}.{{ hypervisor }}.vespian.net \
                    --interface eth0 \
                    --mac-address random \
                    --ip-address ${2} \
                    --dns-name ${1}.{{ hypervisor }}.vespian.net \
                    --virt-type qemu \
                    --virt-pxe-boot 1
